{
  "workspace": [
    "./packages/sandbox-daemon",
    "./packages/server",
    "./packages/drizzle"
  ],
  "fmt": {
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "include": [
      "packages/"
    ],
    "rules": {
      "exclude": [
        "require-await",
        "no-slow-types",
        "no-window"
      ]
    }
  },
  "tasks": {
    "check": "deno task --cwd=packages/sandbox-daemon check",
    "test": "deno task --cwd=packages/sandbox-daemon test",
    "verify": "deno task -r check && deno task -r test",
    "coverage": "deno task --cwd=packages/sandbox-daemon coverage",
    "coverage:check": "deno task --cwd=packages/sandbox-daemon coverage:check",
    "db:generate": "deno task --cwd=packages/drizzle db:generate"
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1"
  }
}
