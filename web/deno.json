{
  "workspace": [
    "./packages/react-router-deno",
    "./packages/app",
    "./packages/consumer"
  ],
  "imports": {
    "@wuhu/shared": "../core/packages/shared/mod.ts"
  },
  "nodeModulesDir": "auto",
  "unstable": ["sloppy-imports"],
  "fmt": {
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "require-await",
        "no-slow-types",
        "no-window"
      ]
    }
  },
  "tasks": {
    "test": "deno test -A packages/app"
  }
}
